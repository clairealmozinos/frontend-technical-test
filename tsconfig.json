{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "assets/*": [ "src/assets/*" ],
      "components/*": [ "src/components/*" ],
      "pages/*": [ "src/pages/*" ],
      "store/*": [ "src/store/*" ],
      "styles/*": [ "src/styles/*" ],
      "types/*": [ "src/types/*" ],
      "utils/*": [ "src/utils/*" ]
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
